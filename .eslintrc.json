{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"], // Enforce single quotes
    "semi": ["error", "always"], // Require semicolons
    "indent": ["error", 2], // 2 spaces for indentation
    "linebreak-style": ["error", "unix"], // Unix linebreaks
    "no-console": "warn", // Warn for console logs
    "no-unused-vars": "warn", // Warn for unused variables
    "eqeqeq": ["error", "always"], // Require strict equality
    "curly": "error", // Require curly braces for all control statements
    "no-magic-numbers": [
      "warn",
      { "ignore": [0, 1], "ignoreArrayIndexes": true }
    ], // Avoid magic numbers, but allow 0 and 1
    "prefer-const": "error", // Prefer const for variables that are never reassigned
    "max-len": ["error", { "code": 80 }], // Limit lines to 80 characters
    "object-curly-spacing": ["error", "always"], // Require spacing inside curly braces
    "array-bracket-spacing": ["error", "never"], // No spacing inside array brackets
    "no-duplicate-imports": "error", // Disallow duplicate imports
    "consistent-return": "error" // Require consistent return statements
  }
}
